{
    "editor.guides.indentation": false,
    "files.autoSave": "onFocusChange",
    "editor.roundedSelection": false,
    "editor.renderLineHighlight": "none",
    "editor.fontLigatures": true,
    "editor.fontFamily": "JetBrains Mono, Monaco, 'Courier New', monospace",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "diffEditor.ignoreTrimWhitespace": false
    },
    "git.openRepositoryInParentFolders": "always",
    "julia.enableTelemetry": false,
    "editor.minimap.enabled": false,
    "julia.execution.codeInREPL": true,
    "workbench.editor.wrapTabs": true,
    "julia.numTestProcesses": 0,
    "editor.formatOnSave": true,
    "editor.guides.highlightActiveIndentation": false,
    "editor.scrollBeyondLastLine": false,
    "workbench.colorCustomizations": {
        "[*Dark*]": {
            "tab.activeBackground": "#203a56",
        },
        "[*Light*]": {
            "tab.activeBackground": "#d0d0f0",
        },
        "editorGhostText.foreground": "#ff0000"
    },
    "editor.wordBasedSuggestions": "off",
    "terminal.integrated.scrollback": 1000000,
    "window.autoDetectColorScheme": true,
    "workbench.editor.enablePreview": false,
    "editor.lightbulb.enabled": "off",
    "peacock.showColorInStatusBar": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "julia.liveTestFile": "TFOpt.jl/test/runtests.jl",
    "files.exclude": {
        "**/{src,test}/*.jl*.cov": true,
        "**/coverage": true
    },
    "explorer.sortOrderLexicographicOptions": "upper",
    "rewrap.wrappingColumn": 100,
    "editor.hover.enabled": false,
    "terminal.integrated.tabs.enabled": false,
    "explorer.excludeGitIgnore": true,
}
